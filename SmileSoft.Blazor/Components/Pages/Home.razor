@using SmileSoft.API.Clients;
@using DTO;
@page "/"


<PageTitle>Inicio</PageTitle>

<h1>Bienvenido (odontólogo que inició sesión)</h1>

Turnos:


@if (atenciones == null)
{
    <p><em>Cargando...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Fecha y hora</th>
                <th>Paciente</th>
                <th>Estado</th>
                <th>Tipo de atencion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var atencion in atenciones)
            {
                <tr>
                    <td>@atencion.FechaHoraAtencion</td>
                    <td>@atencion.PacienteNombre @atencion.PacienteApellido</td>
                    <td>@atencion.Estado</td>
                    <td>@atencion.TipoAtencionDescripcion</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private AtencionDetalleDTO[]? atenciones;

    protected override async Task OnInitializedAsync()
    {
        var atencionesResponse = await AtencionApiClient.GetByOdontologoIdAsync(5); //TODO reemplazar por el id del odontólogo logueado
        if (atencionesResponse != null && atencionesResponse.Count() > 0)
        {
            atenciones = atencionesResponse.ToArray();
        }
    }

}
